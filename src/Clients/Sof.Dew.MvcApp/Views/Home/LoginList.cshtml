@model IEnumerable<Sof.Dew.MvcApp.Models.ExternalLoginConfirmationViewModel>

@{
    ViewBag.Title = "LoginList";
}
@section head{
   <style type="text/css">
    .btn-group button {
        border-width: 0px;
    }
    .content{width:100%;height:100%}
</style>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
   <script type="text/javascript">
       $(function () {
           $("div.btn-group button").each(function () {
               $(this).bind('click', function (i) {
                   $("iframe").each(function () {
                       $(this).css("display", "none");
                   });
                   $("#" + $(this).attr("title")).css("display", "block");

                   $("div.btn-group button").each(function () {
                       $(this).removeClass("active");
                   });
                   $(this).addClass("active");
                   //alert($(this).css("display"));
               });
           });

           $("iframe").each(function () {
               $(this).height($(window).height() - 50);
           });

       });
</script>

}


