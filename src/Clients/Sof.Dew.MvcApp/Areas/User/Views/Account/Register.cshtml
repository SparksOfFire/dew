@model Sof.Dew.MvcApp.Areas.Admin.Models.RegisterViewModel
@{
    ViewBag.Title = "注册";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
@section head{
    <style>
        .body-content {
            max-width: 360px;
        }
    </style>
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="form-group">
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "手机号码" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密码" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "确认密码" })
        </div>
        <div class="checkbox text-left">
            <label>
                @Html.CheckBoxFor(m => m.Accept)
                @Html.DisplayNameFor(m => m.Accept)@Html.ActionLink("《用户协议》", "UserAgreement")
            </label>
        </div>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <button id="btnRegister" type="submit" class="btn btn-success btn-block btn-lg" disabled><span class="glyphicon glyphicon-ok"></span> 注 册</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#Accept").click(function () {
            $("#btnRegister").prop("disabled", !$(this).prop("checked"));
        });

    </script>
}
